<%= form_for([@user, @profile], :html => { multipart: true }) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation" class= "alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :skin_type %><br>
    <%= f.select(:skin_type, ['Dry', 'Oily', 'Normal', 'Combination'], {}, { :class => 'profile' }) %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>