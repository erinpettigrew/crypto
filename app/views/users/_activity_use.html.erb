<div class="activity-row col-xs-12 col-sm-6">
  <div class="col-xs-3">
    <div class="small-avatar activity-avatar"><%= link_to image_tag(use.user.pic), use.user %></div>
  </div>
  <div class="col-xs-9">

  </br></br>
  <div class="activity-image"><%= link_to image_tag(use.product.image), use.product %></div>
  <div class="user-name"><%= link_to use.user.user_name, use.user %></div> started using
    <br/><div class="product-brand"><%= link_to use.product.product_brand, use.product %></div>
    <br/><div class="product-name"><%= link_to use.product.product_name, use.product %></div>
    <br/> <div class="feed-timestamp"> <%= time_ago_in_words(use.created_at).gsub('about','') %> ago</div>
  </div>
</div>
