<!-- show the profile of the currently logged in user -->

<div class="jumbotron">
<p><h3>Hi, <%= current_user.user_name %></h3></p>
<p>You joined us on <%= current_user.created_at.strftime("%-m/%-d/%-y") %>.</br>We're so glad to have you!</p>
<h3>
<% if @current_user_reviews.length == 1 %>
	So far, you have written <%= "#{@current_user_reviews.length} review." %>
	<% elsif @current_user_reviews.length == 0 %>
	<%= "Get started now!" %>
<div class="new-product-panel"
  <div class="form-group">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary" %>
</div>

<% else %>
	So far, you have written <%= "#{@current_user_reviews.length} reviews!" %>
<% end %></h3>
</div>

<table class="table">
			<thead>
				<tr>
					<th class="col-md-3"></th>
					<th class="col-md-9"></th>
				</tr>
			</thead>

			<tbody>


<% @current_user_reviews.each do |review| %>
					<tr>
						<td>
							<h4><%= "#{review.product.product_name.titleize}" %></h4>
							<p>by <%= "#{review.product.product_brand.titleize}" %></p>
							<div class ="profile-product-image"><%= image_tag review.product.image_url %></div>
						</td>
						<td>
  							<div class="star-rating" data-score= <%= review.rating %> ></div>
							<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
							<p>Added on <%= review.created_at.strftime("%-m/%-d/%-y") %>
							<% if user_signed_in? %>
								(Edit Delete)
							<% end %></p>
						</td>
					</tr>
<% end %>
			</tbody>
		</table>


<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>

