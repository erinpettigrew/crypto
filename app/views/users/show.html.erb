<!-- show the profile of the currently logged in user -->

<div class="jumbotron">
<p><h3>Hi, <%= current_user.user_name %></h3></p>
<p>You joined us on <%= current_user.created_at.strftime("%-m/%-d/%-y") %>.</br>We're so glad to have you!</p>
<h3>
<% if @current_user_reviews.length == 1 %>
	So far, you have written <%= "#{@current_user_reviews.length} review." %>
	<% elsif @current_user_reviews.length == 0 %>
	<%= "Get started now!" %>
<div class="new-product-panel"
  <div class="form-group">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary" %>
</div>

<% else %>
	So far, you have written <%= "#{@current_user_reviews.length} reviews!" %>
<% end %></h3>
</div>

<div class="row profile-panel">
	<% @current_user_reviews.each do |review| %>
		<div class="row">
			<div class="col-xs-3 col-sm-3">
				<div class ="profile-product-image"><%= image_tag review.product.image_url %></div>
				<div class="profile-product-info">
				</div>
			</div>
			<div class="col-xs-9 col-sm-9">
				<table>
					<tr class ="col-xs-12 col-sm-12">
						<td>
							<h4><%= "#{review.product.product_brand.titleize}" %></h4>
							<h4><%= "#{review.product.product_name.titleize}" %></h4>
		  					<div class="stars"><div class="star-rating" data-score= <%= review.rating %> ></div></div>
		  				</td>
		  			</tr>
		  			<tr class="col-xs-12 col-sm-12">
		  				<td>
							<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
							<p><%= review.created_at.strftime("%-m/%-d/%-y") %>
							<% if user_signed_in? %>
								<% if (review.user == current_user) %>
									<%= link_to "Edit", edit_product_review_path(review.product, review) %>
									<% if (current_user.admin?) %>
										<%= link_to "Delete", product_review_path(review.product, review), method: :delete %>
									<% end %>
								<% end %>
							<% end %>
							</p>
						</td>
					</tr>
				</table>
			</div>
		</div>
	<% end %>
</div>


<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>

