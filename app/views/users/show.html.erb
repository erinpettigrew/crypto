<% title @profile.user_name + "'s " + 'reviews on looklove' %>
<% description 'Reviews and photos of Korean, Japanese, and other Asian skincare products by ' %>
<% keywords 'reviews, community, forum, posts, asian, skincare, beauty, products, lists, regimen' %>
<% nofollow %>
<% noindex %>

<div class="jumbotron">
<% if @profile != current_user %>

	<p><h1><%= @profile.user_name %></h1></p>
	<div class="big-avatar"><%= image_tag(@profile.avatar.try(:image)) %></div>
	<p>Member since <%= @profile.created_at.strftime("%-m/%-d/%-y") %></p>
	<h3>
<% elsif @profile == current_user %>
	<p><h1>Hi, <%= @profile.user_name %></h1></p>
	<div class="big-avatar"><%= image_tag(@profile.avatar.try(:image)) %></div>
	
	<% if @profile.avatar.blank? %>
		<%= link_to "Add photo", new_user_avatar_path(@profile) %>
	<% else %>
		<%= link_to "Edit photo", edit_user_avatar_path(@profile, @profile.avatar) %></br>
		<%= link_to "Delete photo", [@profile, @profile.avatar], method: :delete %>
	<% end %>
<% end %>
</div>

<% if @products.present? %>
	<div class="product-list">
	<div class= "title">Loves</div>
	    <% @products.each_with_index  do |product, i| %>
	        <div class="product-card">

	            <div class="row product-list-row">

	              <div class="col-xs-4 col-md-3">
	                <div class="index-product-image"><%= link_to image_tag(product.image.url), product %>
	                </div>
	              </div>

	              <div class="col-xs-4 col-md-5 product-info">
	                <div class="row product-list-row">
	                  <div class="col-xs-12 col-md-5">
	                    <h6><%= product.product_brand %></h6>
	                    </div>
	                    <div class="col-xs-12 col-md-7">
	                      <h7><%= link_to product.product_name, product %></h7>
	                    </div>
	                  </div>
	                </div>

	                <div class="col-xs-4 col-md-4 review-info">
	                  <div class="col-xs-12 col-md-8">
	                    <div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div>
	                  </div>
	                  <div class="col-xs-12 col-md-4">
	                    <% if @review_count[i] == 1 %>
	                      <p><%= @review_count[i] %> review<p>
	                    <% elsif @review_count[i] == 0 %>
	                      <p><%= link_to "Write a review!", product %></p>
	                    <% else %>
	                      <p><%= @review_count[i] %> reviews</p>
	                    <% end %>
	                  </div>
	                </div>


	            </div>   <!-- /row product-list-row -->
	        </div>   <!-- /product-card -->         
	    <% end %>
	</div>
<% end %>


<% if @profile_reviews.present? %>
	<div class="product-list">
		<div class= "title">Reviews</div>
		    <% @profile_reviews.each do |review| %>
		        <div class="product-card">
		            <div class="row product-list-row">
		              <div class="col-xs-4 col-md-3">
		                <div class="index-product-image"><%= link_to image_tag(review.product.image_url), review.product %>
		                </div>
		              </div>

		              <div class="col-xs-4 col-md-5 product-info">
		                <div class="row product-list-row">
		                  <div class="col-xs-12 col-md-5">
		                    <h6><%= "#{review.product.product_brand}" %></h6>
		                    </div>
		                    <div class="col-xs-12 col-md-7">
		                      <h7><%= link_to review.product.product_name, review.product %></h7>
		                    </div>
		                  </div>
		                </div>

		                <div class="col-xs-4 col-md-4 review-info">
		                  <div class="col-xs-12 col-md-8">
		                    <div class="star-rating-index"><div class="star-rating" data-score= <%= review.rating %>></div></div>
		                  </div>

		                </div>

		                <div class="col-xs-12 col-sm-8 col-md-8 review-excerpt">
		                   <!--"<%= truncate(review.comment, length:200, separator: ' ') %>"-->
		                   "<%= h(review.comment).gsub(/\n/, '<br/>').html_safe %>"
		                  - <%= link_to review.user.user_name, review.user %>, <%= time_ago_in_words(review.updated_at).gsub('about','') %> ago
		    
		              				<% if user_signed_in? %>
									<% if (review.user == current_user) || (current_user.admin?) %>
										<p><%= link_to "Edit", edit_product_review_path(review.product, review) %>
										<%= link_to "Delete", product_review_path(review.product, review), method: :delete %>
										<%= review.created_at.strftime("%-m/%-d/%-y") %></p>
									<% end %>
								<% end %>
		                </div>

		            </div>   <!-- /row product-list-row -->
		        </div>   <!-- /product-card -->         
		      <% end %>
	</div>
<% end %>





<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>

