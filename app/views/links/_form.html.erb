<%= form_for([@product, @link], :html => { multipart: true }) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation" class= "alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h4>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :site_id %><br>
    <%= f.select :site_id, @sites.collect {|s| [s.name.titleize, s.id]}, class: "form-control" %> <small> helper text </small>
  </div>

  <div class="form-group">
    <%= f.label :excerpt %><br>
    <%= f.text_field :excerpt, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>