<div class="col-xs-6 col-sm-4 look-product">
  <% if product.link.present? %>
    <%= link_to image_tag(product.image.url), product.link %>
  <% else %>
    <%= image_tag(product.image.url) %>
  <% end %>
  <div class="brand"><%= product.product_brand %></div>
  <div class="name"><%= product.product_name %></div>
</div>
