<div class="jumbotron">
    <h1><%= @category.name.pluralize.titleize %></h1>
    <h4><%= @category.description %></h4>
    </p>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
          	<%= link_to 'Add a new ' + @category.name.titleize, new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
     <% end %>
</div>


<div class="product-list-header">
  <p><h4><%= @products.count %> Products</h4></p>
</div>

<div class="product-list">
  <% @products.each_with_index do |product, i| %>
    <div class="row product-list-row">
      <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
      <div class="col-xs-4 col-md-5 product-info">
      <div class="row product-list-row">
          <div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></div><div class="col-xs-12 col-md-7"><%= link_to product.product_name, product %></h6></div>
      </div>
    </div>
      <div class="col-xs-4 col-md-4 review-info">
        <div class="col-xs-12 col-md-8">Rating</div>
        <div class="col-xs-12 col-md-4">Reviews</div>
      </div>
    </div>               
  <% end %>
</div>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
