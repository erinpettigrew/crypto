<% title @category.name.pluralize.titleize + ' on looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best ' + @category.name.pluralize %>
<% keywords @category.name.pluralize + ', skincare products, cosometics products, beauty reviews, community, forum, posts, asian beauty, korean beauty, skincare, beauty, products' %>
<div class="index-panel">
    <h1><%= @category.name.pluralize.titleize %></h1>
    <% if @category.description.blank? %>
    	</p>
    <% else %>
  		<p><h4><%= h(@category.description).gsub(/\n/, '<br/>').html_safe %></h4></p>
   	<% end %>

    <br>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
          	<%= link_to 'Add a new ' + @category.name.titleize, new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
     <% end %>
</div>

<div class="product-list">
  <div class="title">
      <%= pluralize(@products.count, "Product") %>
  </div>
  <table class="table">
  <% @products.each_with_index do |product, i| %>
  <tr>
    <td>
      	<div class="col-xs-4 col-md-3">
      		<div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div>
      	</div>
      	<div class="col-xs-4 col-md-5 product-info">
      		<div class="row product-list-row">
          		<div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></div>
          		<div class="col-xs-12 col-md-7"><%= link_to product.product_name, product %></h6></div>
      		</div>
    	</div>

    	<div class="col-xs-4 col-md-4 review-info">
          <% if @review_count[i] >= 1 %>
        	<div class="col-xs-12 col-md-8">
        		<div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div>
       		</div>
        	<div class="col-xs-12 col-md-4">
              <% if @review_count[i] > 1 %>
            		<p><%= @review_count[i] %> reviews</p>
              <% elsif @review_count[i] = 1 %>
                <p><%= @review_count[i] %> review</p>
                <% end %>
            </div>
          <% elsif @review_count[i] == 0 %>
              <div class="col-xs-12 col-md-4">
            		<p><%= link_to "Write a review!", product %></p>
              </div>
          		<% else %>
                <div class="col-xs-12 col-md-4">
            		  <p><%= @review_count[i] %> reviews</p>
               </div>
	      		 <% end %>
	    	  </div>
</td>
</tr>
  <% end %>
</table>
</div>


<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>