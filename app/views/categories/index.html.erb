<% title 'looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best in new skincare and cosmetics products' %>
<% keywords 'skincare products, cosometics products, beauty reviews, community, forum, posts, asian beauty, korean beauty, skincare, beauty, products, lists, regimen' %>
<div class="index-panel">
    <h1>The best in beauty</h1>
    <h4>What's new? What's good?</h4>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
            <%= link_to 'Add a new product!', new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
      <% else %>
      <div class="new-product-panel">
        <div class="form-group">
            <%= link_to 'Sign up to share!', new_user_registration_path, class: "btn btn-primary btn-lg" %>
       </div>
     </div>
      <% end %>
</div>

<div class="category-index">
  <% @categories.each_with_index do |category, i | %>
    <div class="row category-row">
      <div class="col-xs-5 col-sm-3 category-name">
        <%= link_to category.name.titleize.pluralize, category %>
      </div>
      <div class="col-xs-7 col-sm-6 category-images">
        <%= link_to image_tag(@products[i].first.try(:image)), @products[i].first %>
        <%= link_to image_tag(@products[i].second.try(:image)), @products[i].second %>
        <%= link_to image_tag(@products[i].third.try(:image)), @products[i].third %>       
      </div>
      <div class="col-xs-12 col-sm-3 category-count">
          <%= link_to pluralize(category.products.count, "product"), category %>
      </div>
    </div> <!--/row-->
     <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to 'Show', category %></td>
          <%= link_to 'Edit', edit_category_path(category) %></td>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
  <% end %>
</div>





