<% title 'looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best in new skincare and cosmetics products' %>
<% keywords 'skincare products, cosometics products, beauty reviews, community, forum, posts, asian beauty, korean beauty, skincare, beauty, products, lists, regimen' %>
<div class="index-panel">
    <h1>The best in beauty</h1>
    <h4>What's new? What's good?</h4>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
            <%= link_to 'Add a new product!', new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
      <% else %>
      <div class="new-product-panel">
        <div class="form-group">
            <%= link_to 'Sign up to share!', new_user_registration_path, class: "btn btn-primary btn-lg" %>
       </div>
     </div>
      <% end %>
</div>

<table class="table table-hover">
  <tbody>
    <% @categories.each_with_index do |category, i| %>
      <tr>
        <td><div class="category-table-cell"><h4><%= link_to category.name.titleize.pluralize, category %></h4></div></td>
        <td>
          <div class="category-table-cell">
            <% if category.products.size >= 1 %>
              <%= link_to image_tag(@product1[i].image), @product1[i] %>
            <% end %>
            <% if category.products.size >= 2 %>
              <%= link_to image_tag(@product2[i].image), @product2[i] %>
            <% end %>
            <% if category.products.size >= 3 %>
              <%= link_to image_tag(@product3[i].image), @product3[i] %>       
            <% end %>
        </div>
        </td>
        <td><div class="category-table-cell">
            <p><%= link_to (pluralize(category.products.count, "product")), category %></p>
          </div>
        </td>
        <!--<td><%= truncate(category.description, length: 65) %></td>-->
                            <% if user_signed_in? %>
                              <% if current_user.admin? %>
                                <td><%= link_to 'Show', category %></td>
                                <td><%= link_to 'Edit', edit_category_path(category) %></td>
                                <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              <% end %>
                            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <tr><%= link_to 'New Category', new_category_path %></tr>
    <% end %>
  <% end %>
</div>



