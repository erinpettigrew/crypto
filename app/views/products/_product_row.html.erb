
    <div class="row product-row">
      <div class="col-xs-3 product-image">
        <%= link_to image_tag(product.image.url), product %>
      </div>

      <div class="col-xs-5">
        <div class="product-brand"><%= product.product_brand %></div>
        <div class="product-name"><%= link_to product.product_name, product %></div>
      </div>

      <div class="col-xs-4 review-info">
        <% if product.reviews.count > 0 %>
        <div class="col-xs-12">
          <div class="star-rating-index"><div class="star-rating" data-score= <%= product.average_rating %>></div></div>
        </div>
        <div class="col-xs-12">
          <%= link_to pluralize(product.reviews.count, "review"), product %><% unless product.uses.count == 0 %>, <%= pluralize(product.uses.count, "user") %><% end %>
        </div>
        <% elsif product.reviews.count == 0 %>
        <div class="col-xs-12">
          <% unless product.uses.count == 0 %>
          <%= pluralize(product.uses.count, "user") %>
          <% end %>
        </div>
        <% end %>
        <%= render partial: 'uses/uses', locals: { uses: product.uses } %>
      </div>
    </div>
