<% if user_signed_in? %>
<div class="row add-row">
<div class="col-xs-12 col-sm-6 share">

  <div class="share-text">Welcome text here</div>

</div>
<div class="col-xs-12 col-sm-6">
  <div class="btn btn-lg btn-info share-button">Add my product!</div>
</div>
</div>
<% else %>

<div class="row add-row">
<div class="col-xs-12 col-sm-6 share">
  <div class="share-text">Welcome text here
  </div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <% if devise_mapping.omniauthable? %>
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-lg fb-button" %><br />
      <% end %>
    <% end %>
  </div>
</div>
<% end %>
