			<div class="uses">
				<div class="row">
					<h3><%= pluralize(@product.uses.size, "User") %></h3>
					<% @product.recent_uses.each_with_index do |use, j| %>
						<% if @product.recent_uses[j].user.avatar.present? %>
							<div class="col-xs-2">
								<div class="small-avatar">
									<%= link_to image_tag(@product.recent_uses[j].user.try(:avatar).try(:image).try(:small_thumb)), @product.recent_uses[j].user %>
