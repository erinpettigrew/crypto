<%= form_for(@product, :html => { multipart: true }) do |f| %>
  <% if @product.errors.any? %>
  <div id="error_explanation" class= "alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, placeholder: "Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :device %>
    <%= f.text_field :device, placeholder: "Web, Desktop, Mobile, Offline", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :launch_year %>
    <%= f.text_field :founded_date, placeholder: "Launch year", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :slug %>
    <%= f.text_field :slug, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :about %>
    <%= f.text_area :about, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :platform %>
    <%= f.text_field :platform, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.submit value: "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
