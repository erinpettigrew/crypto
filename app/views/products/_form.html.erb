<%= form_for(@product, :html => { multipart: true }) do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation" class= "alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

  <ul>
    <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <%= f.label :product_brand %><br>
  <%= f.text_field :product_brand, class: "form-control", placeholder: "SK-II" %>
</div>
<div class="form-group">
  <%= f.label :product_name %><br>
  <%= f.text_field :product_name, class: "form-control", placeholder: "First Treatment Essence" %>
</div>
<div class="form-group">
  <%= f.label :image %><br>
  <%= f.file_field :image, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :category_id %><br>
  <%= f.select :category_id, @categories.collect {|c| [c.name.titleize, c.id]}, class: "form-control" %> <small>Not sure? Choose "Other" and we'll take care of it!</small>
</div>

<% if current_user.admin? %>
<div class="form-group">
  <%= f.label :ingredients %><br>
  <%= f.text_area :ingredients, class: "form-control", rows: "10", placeholder: "Add ingredients here"%>
</div>
<% end %>

<div class="form-group">
  <%= f.submit value: "Save", class: "btn btn-primary btn-lg" %>
</div>
<% end %>
