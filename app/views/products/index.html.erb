<% title 'looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best in new skincare and cosmetics products' %>
<% keywords 'the best beauty products, reviews, community, forum, posts, asian beauty, korean beauty, skincare' %>

<%= render 'search' %>

<div class="title">Recently</div>
<div class="row activity-index">
  <% @activity.each do |activity| %>
    <% if activity.is_a? (Use) %>
      <%= render partial: "users/activity_use", locals: { use: activity } %>
    <% elsif activity.is_a? (Review) %>
      <%= render partial: "users/activity_rating", locals: { review: activity } %>
    <% end %>
  <% end %>
</div>

<div class="category-index">
  <div class="title">Categories</div>
  <div class="row theme-row">
    <%= render partial: 'categories/category_row', collection: @rand_categories, as: :category %>
  </div>
</div>

<!-- <div class="title">Popular</div>
<div class="row theme-row">
  <%= render partial: 'products/product_row', collection: @popular_products, as: :product %>
</div> -->

<div class="category-index">
  <div class="title">Brands</div>
    <div class="row theme-row">
      <%= render partial: 'brands/brand_tile', collection: @brands, as: :brand %>
  </div>
</div>

<div class="title">Reads</div>
<%= render partial: 'posts/post_tile', collection: @recent_posts, as: :post %>


<script>
  mixpanel.track("Viewed Home");
  <% if current_user %>
  mixpanel.identify("<%= current_user.id %>");
  mixpanel.people.set({
    "$email" : "<%= current_user.email %>",
    "name" : "<%= current_user.user_name %>",
    "User ID" : "<%= current_user.id %>",
    <% end %>
  });
</script>

<script>
  mixpanel.track_links(".feed-user a", "Clicked Feed", {"Item" : "User"})
  mixpanel.track_links(".review-item a", "Clicked Feed", {"Item" : "Review"});
  mixpanel.track_links(".use-item a", "Clicked Feed", {"Item" : "Use"});
  mixpanel.track_links(".want-item a", "Clicked Feed", {"Item" : "Want"});
  mixpanel.track_links(".post-item a", "Clicked Feed", {"Item" : "Post"});
</script>
