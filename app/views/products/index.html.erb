<% title 'looklove, reviews of Asian skincare and beauty products' %>
<% description 'Reviews and photos of the best Asian skincare products' %>
<% keywords 'reviews, community, forum, posts, asian, skincare, beauty, products, lists, regimen' %>
<% nofollow %>
<% noindex %>

<div class="jumbotron">
  <h1>welcome</h1>
  <h3>Share reviews and photos of Asian skincare products!</h3>
</div>
<div class="product-list-header">
  <p><h4><%= Product.count %> Products, <%= Review.count + Photo.count %> Reviews & Photos</h4></p>
</div>

<div class="product-list">
  <% @products.each_with_index do |product, i| %>
    <div class="row">
      <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
      <div class="col-xs-4 col-md-5">
      <div class="row">
          <div class="col-xs-12 col-md-6"><%= product.product_brand %></div><div class="col-xs-12 col-md-6"><%= link_to product.product_name, product %></div>
      </div>
    </div>
      <div class="col-xs-4 col-md-4">
        <div class="col-xs-12 col-md-6"><div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %> ></div></div></div>
        <div class="col-xs-12 col-md-6">
          <% if @review_count[i] == 1 %>
            <%= @review_count[i] %> review
          <% elsif @review_count[i] == 0 %>
            <%= link_to "Write a review!", product %>
          <% else %>
            <%= @review_count[i] %> reviews
          <% end %>
        </div>
      </div>
    </div>               
  <% end %>
</div>

<% if user_signed_in? && current_user.admin? %>
<div class="new-product-panel"
  <div class="form-group">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary" %>
</div>
</div>
<% end %>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>