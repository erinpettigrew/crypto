<% title 'tbd, reviews of Asian skincare and beauty products' %>
<% description 'Reviews and photos of the best Asian skincare products' %>
<% keywords 'reviews, community, forum, posts, asian, skincare, beauty, products, lists, regimen' %>
<% nofollow %>
<% noindex %>

<div class="jumbotron">
    <h2>Share reviews of Asian skincare products.</h2></br>
    <p><h4><%= Product.count %> products and <%= Review.count + Photo.count %> reviews so far!</h4>
    </p>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
          <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
      <% else %>
      <div class="form-group">
          <%= link_to 'Sign up to share!', new_user_registration_path, class: "btn btn-primary btn-lg" %>
     </div>

      <% end %>
</br>
      <strong>NEW!</strong> Browse by <%= link_to "product category", categories_path %>. &#9829; Erin

</div>

<div class="product-list">
<div class= "title">Recently Reviewed</div>
    <% @products.each_with_index  do |product, i| %>
      <% if @review_count[i] >= 1 and @looping < 6 %>
      <!--<%= @looping += 1 %>-->
      <div class="product-card">
          <div class="row product-list-row">
            <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
            <div class="col-xs-4 col-md-5 product-info">
              <div class="row product-list-row">
                <div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></div><div class="col-xs-12 col-md-7"><%= link_to product.product_name, product %></h6></div>
                </div>
              </div>
            <div class="col-xs-4 col-md-4 review-info">
              <div class="col-xs-12 col-md-8"><div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div></div>
              <div class="col-xs-12 col-md-4">
                <% if @review_count[i] == 1 %>
                  <p><%= @review_count[i] %> review<p>
                <% elsif @review_count[i] == 0 %>
                  <p><%= link_to "Write a review!", product %></p>
                <% else %>
                  <p><%= @review_count[i] %> reviews</p>
                <% end %>
              </div>
            </div>
            <div class="col-xs-12 col-md-8 review-excerpt">
              "<%= truncate(@review[i].comment, length:115, separator: ' ') %>"
              - <%= link_to @user[i].user_name, @user[i] %>
            </div>
          </div>   
          </div>            
      <% end %>
    <% end %>
</div>



<div class="product-list">
<div class= "title">Most Reviewed</div>
    <% @products.each_with_index  do |product, i| %>
      <% if @most_reviewed[i] == true %>
      <div class="product-card">
          <div class="row product-list-row">
            <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
            <div class="col-xs-4 col-md-5 product-info">
            <div class="row product-list-row">
                <div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></div><div class="col-xs-12 col-md-7"><%= link_to product.product_name, product %></h6></div>
            </div>
          </div>
            <div class="col-xs-4 col-md-4 review-info">
              <div class="col-xs-12 col-md-8"><div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div></div>
              <div class="col-xs-12 col-md-4">
                <% if @review_count[i] == 1 %>
                  <p><%= @review_count[i] %> review<p>
                <% elsif @review_count[i] == 0 %>
                  <p><%= link_to "Write a review!", product %></p>
                <% else %>
                  <p><%= @review_count[i] %> reviews</p>
                <% end %>
              </div>
            </div>
          </div>   
          </div>            
      <% end %>
    <% end %>
</div>

<div class="product-list">
<div class= "title">Newly Added</div>
    <% @products.each_with_index  do |product, i| %>
    <% if @new[i] == true %>
    <% if i < 15 %>
    <% if @review_count[i] == 0 %>
    <div class="product-card">
      <div class="row product-list-row">
        <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
        <div class="col-xs-4 col-md-5 product-info">
        <div class="row product-list-row">
            <div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></div><div class="col-xs-12 col-md-7"><%= link_to product.product_name, product %></h6></div>
        </div>
      </div>
        <div class="col-xs-4 col-md-4 review-info">
          <div class="col-xs-12 col-md-8"><div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div></div>
          <div class="row product-list-row">
          <div class="col-xs-8 col-md-8">
            <% if @review_count[i] == 1 %>
              <p><%= @review_count[i] %> review<p>
            <% elsif @review_count[i] == 0 %>
              <p><%= link_to "Write a review!", product %></p>
            <% else %>
              <p><%= @review_count[i] %> reviews</p>
            <% end %>
          </div>
        </div>
        </div>
      </div>      
      </div>         

    <% end %>
    <% end %>
    <% end %>
    <% end %>


</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>