<div class="jumbotron">
  <h1>welcome to looklove!</h1>
  <h3>Get reviews and photos of the best Asian beauty and skincare products. Grow the collection by writing your own review!</h3>
</div>
<div class="table-header">
  <h3>All Product Reviews</h3>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <% if user_signed_in? && current_user.admin? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_brand %></td>
        <td><%= link_to product.product_name, product %></td>
        <td><div class="star-rating" data-score= <%= @avg_rating %> ></div></td>
</td>
        <td><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></td>
              <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
              <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="new-product-panel"
  <div class="form-group">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary" %>
</div>
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>