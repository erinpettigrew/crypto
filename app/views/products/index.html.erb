        <% end %>
    </div> -->

    <div class="col-xs-12 col-sm-12">
      <div class="title">New</div>
        <% Product.last(3).each do |product| %>
          <%= render partial: 'product_row', locals: { product: product } %>
        <% end %>
    </div>


