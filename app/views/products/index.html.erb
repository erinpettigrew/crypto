<% title 'looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best in new skincare and cosmetics products' %>
<% keywords 'the best beauty products, reviews, community, forum, posts, asian beauty, korean beauty, skincare' %>
<!-- render add partial here -->

<div class="page">
<!-- <%= render 'products/form', locals: { product: @product } %> -->

<div class="front-page">

  <div class="row">


  <div class="col-xs-12 col-sm-12">
    <!-- <div class="title">Collections</div> -->
      <%= render partial: 'looks/look_row', collection: Look.all.sample(3), as: :look %>
  </div>

    <div class="col-xs-12 col-sm-12">
      <div class="title">Reviewed</div>
        <% Review.includes(user: :avatar).last(30).sample(2).each do |review| %>
          <div class="col-xs-12 col-sm-6 review-card">
            <div class="medium-avatar col-xs-3"><%= link_to image_tag(review.user.pic), review.user %></div>
            <%= truncate(review.comment, length: 120) %><br/>
            <div class="review-brand"><%= review.product.product_brand %></div>
            <div class="review-name"><%= link_to review.product.product_name, review.product %></div>
          </div>
        <% end %>
    </div>

    <div class="col-xs-12 col-sm-12">
      <div class="title">Popular</div>
        <% Product.popular.each do |product| %>
          <%= render partial: 'product_row', locals: { product: product } %>
        <% end %>
    </div>

    <div class="col-xs-12 col-sm-12">
      <div class="title">Best</div>
        <% Product.best.each do |product| %>
          <%= render partial: 'product_row', locals: { product: product } %>
        <% end %>
    </div>

    <!-- <div class="col-xs-12 col-sm-12">
