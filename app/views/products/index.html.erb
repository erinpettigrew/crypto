<% keywords 'stuff' %>

<div class="jumbotron">
  <h2>Wallet thing is the easiest place to research and compare cryptocurrency wallets.</h2>
  <h4>Research, review, and rate the newest digital coin wallets.</h4>
  <%= render 'products/login', locals: { product: @product } %>
</div>
      <!-- <h2>See all wallets</h2> -->
      <ul class="list-group">
        <% Product.all.each do |product| %>
        <li class="list-group-item">
        <%= render partial: 'product_row', locals: { product: product } %>
      </li>
        <% end %>
      </ul>

<script>
mixpanel.track("Viewed Home");
<% if current_user %>
mixpanel.identify("<%= current_user.id %>");
mixpanel.people.set({
  "$email" : "<%= current_user.email %>",
  "name" : "<%= current_user.user_name %>",
  "User ID" : "<%= current_user.id %>",
  <% end %>
});
</script>

<script>
