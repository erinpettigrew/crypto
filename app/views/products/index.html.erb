<% title 'looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best in new skincare and cosmetics products' %>
<% keywords 'reviews, community, forum, posts, asian beauty, korean beauty, skincare, beauty, products, lists, regimen' %>
<% nofollow %>
<% noindex %>

<div class="index-panel">
    <h1>The best in beauty</h1>
    <h4>What's new? What's good?</h4>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
            <%= link_to 'Add a new product!', new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
      <% else %>
      <div class="new-product-panel">
        <div class="form-group">
            <%= link_to 'Sign up to share!', new_user_registration_path, class: "btn btn-primary btn-lg" %>
       </div>
     </div>
      <% end %>
</div>


<div class="product-list">
<div class= "title">Recently Reviewed</div>
    <% @recent_reviews.each  do |review, i| %>
        <div class="product-card">

            <div class="row product-list-row">

              <div class="col-xs-4 col-md-3">
                <div class="index-product-image"><%= link_to image_tag(review.product.image.url), review.product %>
                </div>
              </div>

              <div class="col-xs-4 col-md-5 product-info">
                <div class="row product-list-row">
                  <div class="col-xs-12 col-md-5">
                    <h6><%= review.product.product_brand %></h6>
                    </div>
                    <div class="col-xs-12 col-md-7">
                      <h7><%= link_to review.product.product_name, review.product %></h7>
                    </div>
                  </div>
                </div>

                <div class="col-xs-4 col-md-4 review-info">
                  <div class="col-xs-12 col-md-8">
                    <div class="star-rating-index"><div class="star-rating" data-score= <%= review.rating %>></div></div>
                  </div>

                </div>

               <div class="col-xs-12 col-sm-8 col-md-8 review-excerpt">
                  
                  <div class="small-avatar"><%= image_tag review.user.avatar.try(:image).try(:med_thumb) %></div><%= link_to review.user.user_name, review.user %>, <%= time_ago_in_words(review.updated_at).gsub('about','') %> ago
                  <%= truncate(review.comment, length:110, separator: ' ') %>

                </div>

            </div>   <!-- /row product-list-row -->
        </div>   <!-- /product-card -->         
    <% end %><!-- /recent_reviews loop -->
</div><!-- /product-list -->



<div class="product-list">
<div class= "title">Newly Added</div>
    <% @new_products.each_with_index  do |product, i| %>
    <div class="product-card">
      <div class="row product-list-row">
        <div class="col-xs-4 col-md-3"><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></div>
        <div class="col-xs-4 col-md-5 product-info">
        <div class="row product-list-row">
            <div class="col-xs-12 col-md-5"><h6><%= product.product_brand %></h6></div><div class="col-xs-12 col-md-7"><h7><%= link_to product.product_name, product %></h7></div>
        </div>
      </div>
        <div class="col-xs-4 col-md-4 review-info">
          <div class="col-xs-12 col-md-8"><div class="star-rating-index"><div class="star-rating" data-score=0 %></div></div></div>
          <div class="row product-list-row">
          <div class="col-xs-8 col-md-8">
              <p><%= link_to "Write a review!", product %></p>
          </div>
        </div>
        </div>
      </div>      
      </div>         
    <% end %>



</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>