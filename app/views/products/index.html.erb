<% title 'looklove, reviews of Asian skincare and beauty products' %>
<% description 'Reviews and photos of the best Asian skincare products' %>
<% keywords 'reviews, community, forum, posts, asian, skincare, beauty, products, lists, regimen' %>
<% nofollow %>
<% noindex %>

<div class="jumbotron">
  <h1>welcome to looklove</h1>
  <h3>Share reviews and photos of the best Asian skincare products!</h3>
</div>
<div class="table-header">
  <h3><%= Product.count %> Products</h3>
    <h4><%= Review.count + Photo.count %> Reviews & Photos</h4>
</div>
<div class="product-list">
<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
      <% if user_signed_in? && current_user.admin? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product, i| %>
      <tr>
        <td><%= product.product_brand %></td>
        <td><%= link_to product.product_name, product %></td>
        <td><div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %> ></div></div></td>
        <td><div class="index-product-image"><%= link_to image_tag(product.image.url), product %></div></td>
                <td>
                  <% if @review_count[i] == 1 %>
                    <%= @review_count[i] %> review
                  <% elsif @review_count[i] == 0 %>
                    <%= link_to "Write a review!", product %>
                  <% else %>
                  <%= @review_count[i] %> reviews</td>
                  <% end %>

              <% if user_signed_in? && current_user.admin? %>
                  <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %></td>
                  <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
              <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if user_signed_in? && current_user.admin? %>
<div class="new-product-panel"
  <div class="form-group">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-primary" %>
</div>
</div>
<% end %>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>