<div class="col-xs-6 col-sm-3 col-md-3 category-row">
  <div class="category-image">
    <%= link_to image_tag(Product.where(product_brand: brand).first.try(:image)), root_path + 'products/search?utf8=%E2%9C%93&search=' + brand %>
  </div>
  <div class="category-name">
    <%= link_to brand, root_path + 'products/search?utf8=%E2%9C%93&search=' + brand %>
  </div>
</div>
