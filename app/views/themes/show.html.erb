<% title @theme.name.pluralize.titleize + ' on looklove, reviews of new beauty products' %>
<% description 'Reviews and photos of the best ' + @theme.name.pluralize %>
<% keywords @theme.name.pluralize + ', skincare products, cosometics products, beauty reviews, community, forum, posts, asian beauty, korean beauty, skincare, beauty, products' %>
<div class="index-panel">
    <h1><%= @theme.name.pluralize.titleize %></h1>
    <% if @theme.info.blank? %>
      </p>
    <% else %>
      <p><h4><%= h(@theme.info).gsub(/\n/, '<br/>').html_safe %></h4></p>
    <% end %>
    <br>
    <% if user_signed_in? %>
      <div class= "new-product-panel">
          <div class= "form-group">
            <%= link_to 'Add a new ' + @theme.name.titleize, new_product_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
     <% end %>
</div>

<div class="product-list">
  <div class="title">
      <%= pluralize(@products.count, "Product") %>
  </div>

  <div class="row category-nav">
    <% @categories.each do |category| %>
      <div class= "col-xs-6 col-sm-3">
        <div class="category-name"><%= link_to "#{category.name.pluralize.titleize}", category_path(category) %>
        </div>
      </div>
    <% end %>
  </div>

<div class="category-show">
  <% @products.each_with_index do |product, i| %>

    <div class="row product-row">
          <div class="col-xs-3 col-sm-3 col-md-3 product-image">
              <%= link_to image_tag(product.image.url), product %>
          </div>

          <div class="col-xs-5 col-sm-5 col-md-5">
              <div class="col-xs-12 col-sm-12 col-md-12 product-brand">
                <%= product.product_brand %>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-12 product-name">
                <%= link_to product.product_name, product %>
              </div>
          </div>

          <div class="col-xs-4 col-sm-4 col-md-4 review-info">
            <% if @review_count[i] > 0 %>
              <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="star-rating-index"><div class="star-rating" data-score= <%= @avg_rating[i] %>></div></div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-12">
                <%= link_to pluralize(@review_count[i], "review"), product %><% unless @use_count[i] == 0 %>, <%= pluralize(@use_count[i], "user") %><% end %>
              </div>
            <% elsif @review_count[i] == 0 %>
                <div class="col-xs-12">
                  <!--<%= link_to "Add a review!", product %></br>-->
                  <% unless @use_count[i] == 0 %>
                    <%= pluralize(@use_count[i], "user") %>
                    <% end %>
                </div>
            <% end %>

              <% if @use_count[i] > 0 %>
              <div class="uses">
                <div class="tiny-avatar">
                    <%= image_tag(product.uses.first.try(:user).try(:avatar).try(:image).try(:small_thumb)) %>
                    <%= image_tag(product.uses.second.try(:user).try(:avatar).try(:image).try(:small_thumb)) %>
                    <%= image_tag(product.uses.third.try(:user).try(:avatar).try(:image).try(:small_thumb)) %>
                </div>
              </div>
            <% end %>
                    

          </div>
        </div>
    <% end %>
  </div>
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/productbase/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>

<script>
  mixpanel.track("Viewed Theme", {"Theme Name": "<%= @theme.name %>", "Theme ID": <%= @theme.id %>});
</script>