<%= form_for([@theme], :html => { multipart: true }) do |f| %>
  <% if @theme.errors.any? %>
    <div id="error_explanation" class= "alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@theme.errors.count, "error") %> prohibited this theme from being saved:</h4>

      <ul>
      <% @theme.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :info %><br>
    <%= f.text_field :info, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Add theme", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>