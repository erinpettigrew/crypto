<h1><%= @investor.name %></h1>

<% if @investor.exchanges.any? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Investments</h3>
    </div>
    <div class="panel-body">
      <% @investor.exchanges.each do |exchange| %>
        <h5><i class="fa fa-user-o" aria-hidden="true"></i> &nbsp;<%= link_to exchange.name, exchange %></h5>
      <% end %>
    </div>
  </div>
<% end %>

<% if current_user.admin? %>
  <%= link_to "Edit", edit_investor_path, class: "btn btn-primary" %><br><br>
  <%= link_to "Add new", new_investor_path, class: "btn btn-primary" %><br><br>
  <%= link_to 'Destroy', @investor, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
